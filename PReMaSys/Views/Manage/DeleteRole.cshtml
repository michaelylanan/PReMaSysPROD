@using Microsoft.AspNetCore.Identity
@model IdentityRole

<h3>You are about to delete a role "@Model.Name"</h3>
<h6>This action can't be undone</h6>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mt-3">
    <button type="submit" class="btn btn-danger"><i class="fa fa-solid fa-trash-can"></i>Delete</button>
    <div class="mt-2">
        <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fa-solid fa-ban"> Cancel </i></a>
    </div>

</form>
