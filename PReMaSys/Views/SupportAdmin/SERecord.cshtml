@model PReMaSys.Models.SalesUser

@{
    ViewData["Title"] = "SERecord";
     Layout = "~/Views/Shared/SupportAdminDash.cshtml";
}

<div class="container">
  <h1 class="text-center mt-5 mb-5">Sales Employee Credentials</h1>
    <h5 class="text-success">@TempData["ResultMessage"]</h5><h5 class="text-danger">@TempData["ResultMessage2"]</h5>
        <form asp-action="SERecord" class="se-record-form" asp-controller="SupportAdmin" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeNo" placeholder="EmployeeNo" class="form-control" required />
                <span asp-validation-for="EmployeeNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeFirstname" placeholder="EmployeeFirstname" class="form-control" required />
                <span asp-validation-for="EmployeeFirstname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeLastname" placeholder="EmployeeLastname" class="form-control" required />
                <span asp-validation-for="EmployeeLastname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeAddress" placeholder="EmployeeAddress" class="form-control" required/>
                <span asp-validation-for="EmployeeAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="EmployeeBirthdate" placeholder="EmployeeBirthdate" class="form-control" required />
                <span asp-validation-for="EmployeeBirthdate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 mt-3">
               @* <label asp-for="Email" class="control-label"></label>*@
                <input asp-for="Email" placeholder="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @*<label asp-for="Password" class="control-label"></label>*@
                <input asp-for="Password" placeholder="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
               @* <label asp-for="ConfirmPassword" class="control-label"></label>*@
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" required/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 mt-4">
                <input type="submit" value="Employee Record" class="btn btn-success" required />
                  <a asp-action="ListSalesEmployee" class="btn btn-outline-success">Back to List</a>
            </div>
           
        </form>

</div>
