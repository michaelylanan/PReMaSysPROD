@model PReMaSys.ViewModel.AddRoleViewModel

@{
    ViewData["Title"] = "Create New Role";

    <h1 class="text-center mt-5">Add Role</h1>
    <div class="row mt-3">
        <div class="col-md-12">
            <form asp-action="AddRoles" method="post" class="mt-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="col-1 col-form-label"></label>
                    <div>
                        <input asp-for="RoleName" class="form-control" placeholder="Name">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group col-4  mt-3">
                    <button type="submit" class="btn btn-success">Add Role</button>
                    <a asp-action="ListAllRoles" class="btn btn-outline-success my-3">Back</a> 
                </div>
            </form>
        </div>
    </div>


}
