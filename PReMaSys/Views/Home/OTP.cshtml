﻿@{
    ViewData["Title"] = "One Time Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mb-5 mt-5">
    <h1>One Time Password Change</h1>
    <h3>The password that was created was a default. Please change your password to a new one:</h3>
</div>


<form>
    <div class="form-group mb-3 d-flex justify-content-center">
        <input type="password" class="form-control w-50" id="exampleInputPassword" placeholder="New Password" aria-describedby="newPassword">
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-lg btn-success w-25  mt-3"> Save </button>
    </div>


</form>