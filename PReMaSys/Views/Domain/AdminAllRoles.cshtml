@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "AdminstrativeRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-5 mb-5">Admin Roles</h1>

@if (Model.Any())
{
    @foreach (var role in Model)
    {
        if(!role.Name.Contains("Domain") && !role.Name.Contains("Sales")){
            <div class="card mb-3">
                <div class="card-header">
                    Role Id: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer" style="padding:20px">
                    <a asp-controller="Manage" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-outline-success"> Edit Role</a>
                    <a asp-controller="Manage" asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-outline-danger"> Delete Role</a>
                </div>
            </div>
        }
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
    </div>
}

 <a class="notificationback-link btn btn-outline-success p-2 mt-3 " href="ListAdminRoles" type="button">Back</a>
